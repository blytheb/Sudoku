<WindowManager>:
    MainScreen:
    GameScreen:
    HowToScreen:

<MainScreen@Screen>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 48
            text: 'Weclome To My Sudoku Game'
            valign: 'bottom'

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 20

            ToggleButton:
                id: four
                group: 'size'
                text: ' 4 x 4 '
                state: 'down'
                on_press: root.manager.grid_size = 4

            ToggleButton:
                id: nine
                group: 'size'
                text: ' 9 x 9 '
                on_press: root.manager.grid_size = 9

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 20
            ToggleButton:
                id: easy
                group: 'level'
                text: ' EASY '
                state: 'down'
                on_press: root.manager.level = 'easy'

            ToggleButton:
                id: reg
                group: 'level'
                text: ' REGULAR '
                on_press: root.manager.level = 'regular'

            ToggleButton:
                id: hard
                group: 'level'
                text: ' HARD '
                on_press: root.manager.level = 'hard'

        FloatLayout:
            id: setting
            Button:
                text: " Let's Play "
                size_hint: .25, .2
                pos_hint: {"x": .375, "y": .8}
                on_release:
                    root.clk_setting(self)
                    app.root.current = 'game'
                    app.root.transition.direction = 'left'

            Button:
                text: ' How To Play '
                size_hint: .25 , .2
                pos_hint: {"x": .375, "y": .5}
                on_release:
                    root.clk_setting(self)
                    app.root.current = 'howto'
                    app.root.transition.direction = 'left'

            Button:
                text: ' Exit '
                size_hint: .25 , .2
                pos_hint: {"x": .375, "y": .2}
                on_press: app.stop()


<GameScreen@Screen>:
    name: "game"
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 48
            text: 'Sudoku ' + root.manager.level + str(root.manager.grid_size)
            valign: 'bottom'
        Button:
            text: "go back"
            on_release:
                app.root.current = "main"
                app.root.transition.direction = 'right'

<HowToScreen@Screen>:
    name: 'howto'
    Button:
        text: "go back"
        on_release:
            app.root.current = "main"
            app.root.transition.direction = 'right'
