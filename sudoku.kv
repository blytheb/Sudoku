<WindowManager>:
    MainScreen:
    GameScreen:
    HowToScreen:

<MainScreen>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 48
            text: 'Weclome To My Sudoku Game'
            valign: 'bottom'

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 20

            ToggleButton:
                id: four
                group: 'size'
                text: ' 4 x 4 '
                state: 'down'
                on_press: root.manager.grid_size = 4

            ToggleButton:
                id: nine
                group: 'size'
                text: ' 9 x 9 '
                on_press: root.manager.grid_size = 9

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 20
            ToggleButton:
                id: easy
                group: 'level'
                text: ' EASY '
                state: 'down'
                on_press: root.manager.level = 'easy'

            ToggleButton:
                id: reg
                group: 'level'
                text: ' REGULAR '
                on_press: root.manager.level = 'regular'

            ToggleButton:
                id: hard
                group: 'level'
                text: ' HARD '
                on_press: root.manager.level = 'hard'

        FloatLayout:
            id: setting
            Button:
                text: " Let's Play "
                size_hint: .25, .2
                pos_hint: {"x": .375, "y": .8}
                on_release:
                    root.clk_setting(self)
                    app.root.current = 'game'
                    app.root.transition.direction = 'left'

            Button:
                text: ' How To Play '
                size_hint: .25 , .2
                pos_hint: {"x": .375, "y": .5}
                on_release:
                    root.clk_setting(self)
                    app.root.current = 'howto'
                    app.root.transition.direction = 'left'

            Button:
                text: ' Exit '
                size_hint: .25 , .2
                pos_hint: {"x": .375, "y": .2}
                on_press: app.stop()


<GameScreen>:
    name: "game"
    on_enter: root.drawGrid()
#    on_enter: root.addGrid()
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: name
            font_size: 36
            text: 'Sudoku ' + root.manager.level + str(root.manager.grid_size)
            valign: 'bottom'
            size_hint: 1, .1
        GridLayout:
            id: board
            rows: root.manager.grid_size
            cols: root.manager.grid_size
            pos_hint: {'center_x':.45, 'center_y':.5}
            size: min(root.size)/2, min(root.size)/2
            size_hint: None, None
            height: self.minimum_height
        BoxLayout:
            orientation: 'horizontal'
            spacing : 5
            padding : 10
            size_hint: 1, .2
            Button:
                id: one
                text: '1'
                on_release:
            Button:
                id: two
                text: '2'
                on_release:
            Button:
                id: three
                text: '3'
                on_release:
            Button:
                id: four
                text: '4'
                on_release:
            Button:
                id: five
                text: '5'
                on_release:
            Button:
                id: six
                text: '6'
                on_release:
            Button:
                id: seven
                text: '7'
                on_release:
            Button:
                id: eight
                text: '8'
                on_release:
            Button:
                id: nine
                text: '9'
                on_release:
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, .3
            spacing: 10
            padding: 10
            Button:
                text: 'Solve'
                on_press:
            Button:
                text: 'Check'
                on_press:
            Button:
                text: 'Clear'
                on_press:


<HowToScreen>:
    name: 'howto'
    Button:
        text: "go back"
        on_release:
            app.root.current = "main"
            app.root.transition.direction = 'right'
